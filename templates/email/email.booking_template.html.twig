<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    {% set nameEnterprise  = app.session.get('nameEnterprise') %}
    {% set contentHtml  = app.session.get('contentSessionHTML') %}
    <title>{% block title %}{{ nameEnterprise }}!{% endblock %}</title>
    {% apply inky_to_html | inline_css(source('@emailCss/email.css')) | inline_css(source('@Css/Styles.css')) %}
</head>
{% block body %}
    <div class="container align-content-lg-center ">
        <div class="col-lg-6 ">
            <br>
            <p>{{ 'mail.mrs_mr' | trans }}</p>
            <span>{{ 'mail.header' | trans }}</span><br>
            <span>{{ 'mail.body.first.paragraph' | trans }}</span>
            <br>
            <div style="max-width:400px; padding-top:40px; padding-bottom: 40px">
                <div style="color: #F5F5F5; text-align: center; background-color: #565e64;">
                    {{ contentHtml | raw }}
                </div>
            </div>
            <div>{{ 'mail.footer.paragraph'| trans }}</div>
            <br>
            <div>{{ 'mail.footer.end'| trans }}</div>
        </div>
        <div dir="ltr">
            <div style="color:rgb(0,0,0);font-family:&quot;Times New Roman&quot;;font-size:medium;width:130px;max-width:130px;min-width:100px;float:left;padding-top:15px">
                <img src="cid:logo" alt="logo" style="margin-top: 1.4em;margin-left:1.1em;width:90px;">
            </div>
            <div style="width:190px;max-width:190px;font-family:&quot;Lucida Grande&quot;,Tahoma;font-size:12px;margin-top:0.5em;color:rgb(102,102,102);letter-spacing:2px;border-left:2px solid rgb(211,216,215);padding-top:3px;padding-left:10px;overflow:hidden">
                <p>Spero navette </p>
                <p>+32 490 197 914&nbsp;
                    <br>
                </p>
                <p>
                    info@spero-navette.be
                </p>
            </div>
        </div>
    </div>
{% endblock %}
{% endapply %}
</html>